package Flatten;

public class StringReverse {
	
	
	public  static char[] reverseString(char[] arr, int pos,int len) {
		if(pos==len-1) {
			return new char[]{arr[pos],' '};
		}
		else {
			char [] retArr = reverseString(arr,pos+1,len);
			char[] tempArr = new char[retArr.length+1];
			tempArr[tempArr.length-1]=arr[pos];
			return tempArr;

		}
		//abc,0,3
		////abc,1,3
		//abc,2,3

		
	}

}
